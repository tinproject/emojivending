{% extends "base.html.j2" %}


{% block title %}Aqu√≠ tienes tu Emoji{% endblock %}
{% block head %}
    {{ super() }}
    <style type="text/css">
    .emoji-small {
        font-family: 'NotoColorEmoji' !important;
        font-size: 2rem !important;
    }
    </style>
{% endblock %}


{% block content %}
{% for subgroup, items in emoji_data.items() %}
    <h1>{{ items.name }}</h1>
    {% for emoji in items.emojis %}
        <icon class="emoji-small" title="{{ emoji[1] }}">{{ emoji[0] }}</icon>
    {% endfor %}
{% endfor %}
{% endblock %}